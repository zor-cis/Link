@model SelectShipViewModel

<div class="container mt-4">
    <h2 class="mb-3">Selecciona un barco para posicionar</h2>

    @if (!Model.IsConfigurationPhase)
    {
        <div class="alert alert-warning">
            La fase de configuración ha terminado.
        </div>
    }
    else if (Model.PendingShips == null || !Model.PendingShips.Any())
    {
        <div class="alert alert-success">
            Ya has colocado todos tus barcos. Espera a que el oponente termine.
        </div>
    }
    else
    {
        <form asp-action="SelectCell" method="post">
            <input type="hidden" name="GameId" value="@Model.GameId" />
            <input type="hidden" name="BoardId" value="@Model.BoardId" />

            <div class="row row-cols-1 row-cols-md-2 g-3">
                @foreach (var ship in Model.PendingShips.Where(s => !s.IsPlaced))
                {
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="ShipSize" value="@ship.ShipSize" required id="ship_@ship.ShipSize" />
                                    <label class="form-check-label" for="ship_@ship.ShipSize">
                                        Barco de tamaño @ship.ShipSize
                                    </label>
                                </div>
                                <div class="mt-2">
                                    @for (int i = 0; i < ship.ShipSize; i++)
                                    {
                                        <span class="d-inline-block bg-primary text-white text-center me-1" style="width: 24px; height: 24px; line-height: 24px; border-radius: 4px;">■</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">Posicionar barco</button>
            </div>
        </form>
    }
</div>
