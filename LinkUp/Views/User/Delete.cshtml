@model DeleteUserViewModel

@{
    ViewData["Title"] = "Eliminar mi cuenta";
}

<div class="col-12 col-md-6 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-danger text-light">
            <h4 class="text-center">
                Desea eliminar la cuenta de -
                @Model.Name @Model.LastName?
            </h4>
        </div>
        <div class="card-body">
            <form asp-controller="User" asp-action="Delete" method="POST">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger me-2"><i class="bi bi-trash"></i> Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

