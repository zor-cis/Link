@model HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="float-end">
    <a asp-controller="Publication" asp-action="Create" class="btn btn-outline-secondary position-fixed">Nueva Publicacion</a>
</div>

<div class="text-center">
    <h1 class="display-4">Panel de publicaciones</h1>
    <p>@User.Identity?.Name</p> 
</div>

<div class="container mt-4">

    @if (Model.Publication == null || Model.Publication.Count == 0)
    {
        <div class="text-center mt-5">
            <h5 class="text-muted">No hay publicaciones</h5>
        </div>
    }
    else
    {
        foreach (var item in Model.Publication)
        {
            <div class="row mb-8 align-items-stretch">

                <div class="col-md-6">

                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text"><small class="text-body-secondary">@item.UserName | @item.CreateAt.ToString("dd/MM/yyyy")</small></p>
                        </div>

                        @if (item.PublicationType == (int)PublicationType.Imagen)
                        {
                            <img src="@item.ImageUrl" class="card-img-bottom" alt="@item.Name">
                        }
                        else if (item.PublicationType == (int)PublicationType.Video)
                        {
                            <div class="ratio ratio-16x9">
                                <iframe src="@item.VideoUrl" title="YouTube video" allowfullscreen></iframe>
                            </div>
                        }

                        <div class="card-footer">
                            <p class="card-text"><small class="text-body-secondary">Comentarios: @item.CommentsCount | Reacciones: @item.ReacctionsCount</small></p>

                            <form asp-controller="Reaction" asp-action="Create" method="POST">
                                <input type="hidden" asp-for="@Model.CreateReaction!.Id" name="Id" value="0" />
                                <input type="hidden" asp-for="@Model.CreateReaction!.IdUser" name="IdUser" value="0" />
                                <input type="hidden" asp-for="@Model.CreateReaction!.IdPublication" name="IdPublication" value="@item.Id" />

                                <div class="mb-3">
                                    <label asp-for="@Model.CreateReaction!.ReactionType" class="form-label">Reaccionar: </label>
                                    <select asp-for="@Model.CreateReaction!.ReactionType" name="ReactionType" class="form-select">
                                        <option value="0" disabled>--Seleccione una opcion--</option>
                                        <option value="@((int)ReactionType.Like)">Me gusto</option>
                                        <option value="@((int)ReactionType.Dislike)">No me gusto</option>
                                    </select>
                                    <span asp-validation-for="@Model.CreateReaction!.ReactionType" class="text-danger"></span>
                                </div>

                                <div>
                                    <button type="submit" class="btn btn-outline-primary float-end"><i class="bi bi-floppy2"></i> Save</button>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>

                <div class="col-md-6">
                    <div class="card h-100">

                        <div class="card-header">
                            <h6 class="mb-0">Comentarios</h6>
                        </div>

                        <div class="card-body" style="max-height: 400px;">

                            @if (item.PostCommen == null || item.PostCommen.Count == 0)
                            {
                                <p class="text-muted text-center mt-3">No hay comentarios aún</p>
                            }
                            else
                            {
                                @foreach (var comment in item.PostCommen)
                                {
                                    <div class="mb-2 p-2 border-bottom">
                                        <div class="d-flex align-items-center gap-2">
                                            <img src="@comment.ProfileImage" class="img-thumbnail rounded-circle" alt="Foto de perfil" width="32" height="32" />
                                            <h5 class="h5 mb-0">@comment.UserName</h5>
                                        </div>
                                        <p class="mb-1">@comment.Text</p>
                                    </div>

                                    <div class="mb-2 p-2 border-bottom">
                                        <form asp-controller="Reply" asp-action="Create" method="POST">
                                            <input type="hidden" asp-for="@Model.CreateReply!.Id" name="Id" />
                                            <input type="hidden" asp-for="@Model.CreateReply!.IdUser" name="IdUser" />
                                            <input type="hidden" asp-for="@Model.CreateReply!.IdPostComment" name="IdPostComment" value="@comment.Id" />

                                            <div class="form-floating">
                                                <textarea asp-for="@Model.CreateReply!.ReplyComment" Name="ReplyComment" class="form-control" placeholder="Deja una respuesta" id="floatingTextarea"></textarea>
                                                <span asp-validation-for="@Model.CreateReply!.ReplyComment" class="text-danger"></span>
                                            </div>

                                            <div>
                                                <button type="submit" class="btn btn-outline-primary float-end"><i class="bi bi-floppy2"></i> Save</button>
                                            </div>
                                        </form>
                                    </div>
                                }
                            }
                        </div>

                        <div class="card-footer">
                            <form asp-controller="PostCommen" asp-action="Create" method="POST">
                                <input type="hidden" asp-for="@Model.CreateCommen!.Id" name="Id"/>
                                <input type="hidden" asp-for="@Model.CreateCommen!.IdUser" name="IdUser"/>
                                <input type="hidden" asp-for="@Model.CreateCommen!.IdPublication" name="IdPublication" value="@item.Id" />

                                <div class="form-floating">
                                    <textarea asp-for="CreateCommen.Text" Name="Text" class="form-control" placeholder="Deja un comentario" id="floatingTextarea"></textarea>
                                    <label asp-for="CreateCommen.Text" for="floatingTextarea">Comentar</label>
                                    <span asp-validation-for="CreateCommen.Text" class="text-danger"></span>
                                </div>

                                <div>
                                    <button type="submit" class="btn btn-outline-primary float-end"><i class="bi bi-floppy2"></i> Save</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>

            </div>

            
            
        }
    }

</div>
